@model IEnumerable<MebleShop.Models.Entities.Feedback>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Админ панель</h1>
    <p class="lead"><em>Здесь отображены непрочитанные заказы пользователей</em> </p>
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<table class="table">
    <tr>
        <th>
           Имя
        </th>
        <th>
           Фамилия
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
          Номер телефона
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id = item.FeedId },  htmlAttributes: new { @class = "btn btn-success" }) |
                @Html.ActionLink("DELETE", "Delete", new { id = item.FeedId },  htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>