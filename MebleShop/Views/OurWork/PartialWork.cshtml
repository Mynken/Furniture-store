@model MebleShop.Models.Entities.OurWorks.Work
@{

    Layout = null;

}
<a href="our_services/our_services.html">
    <div class="div div2">
        @foreach (var item in Model.FileWorkDetails.Take(1))
        {
                <img class="img-thumbnail img_yslygi" align="left"
                     src="/OurWork/GetImage/?workId=@item.Id">
                @*src="@Url.Action("GetImagePartial", "OurWork",
                new { workId = 2 })" />*@
        }
        <p>
            @if (Model.Description.Length > 102)
            {
                @String.Concat(Model.Description.Substring(0, 102), "...")
            }
            else
            {
                @Html.DisplayFor(modelItem => modelItem.Description)
            }            
           
        </p>
    </div>
</a>

