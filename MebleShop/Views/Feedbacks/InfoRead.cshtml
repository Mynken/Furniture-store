@model IEnumerable<MebleShop.Models.Entities.Feedback>
@{
    ViewBag.Title = "Прочитаные заказы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron" style="padding-bottom:30px">
    <h1>Админ панель</h1>
    <p class="lead"><em>Здесь отображены прочитанные заказы пользователей</em> </p>
</div>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Номер телефона
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsRead == true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", new { id = item.FeedId }, htmlAttributes: new { @class = "btn btn-success" }) 
                </td>
            </tr>
        }
    }

</table>
